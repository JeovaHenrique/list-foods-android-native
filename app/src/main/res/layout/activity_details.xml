<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailsActivity">

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Food"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/view_name"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_name"
        android:background="@color/gray"/>

    <TextView
        android:id="@+id/text_portion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_name"
        android:layout_alignParentStart="true"
        android:padding="16dp"
        android:text="Portion size" />

    <TextView
        android:id="@+id/text_qnt"
        android:layout_below="@+id/view_name"
        android:layout_toStartOf="@+id/text_unt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qnt"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/text_unt"
        android:layout_below="@+id/view_name"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="un"
        android:padding="8dp"/>

    <View
        android:id="@+id/view_portion"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_portion"
        android:background="@color/gray"/>

    <TextView
        android:id="@+id/text_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_portion"
        android:layout_alignParentStart="true"
        android:padding="16dp"
        android:text="Calorie" />

    <TextView
        android:id="@+id/text_valueCalorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_portion"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        android:text="90" />

    <View
        android:id="@+id/view_calorie"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_calories"
        android:background="@color/gray"/>

    <TextView
        android:id="@+id/text_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_calorie"
        android:layout_alignParentStart="true"
        android:padding="16dp"
        android:text="information" />

    <TextView
        android:id="@+id/showDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_information"
        android:layout_alignParentStart="true"
        android:padding="16dp"
        android:text="no extra description to be shown" />

</RelativeLayout>