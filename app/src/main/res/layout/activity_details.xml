<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailsActivity">

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="24dp"
        android:text="@string/food"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/view_name"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_name"
        android:background="@color/gray"/>

    <TextView
        android:id="@+id/text_portion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_name"
        android:layout_alignParentStart="true"
        android:padding="16dp"
        android:text="@string/portion" />

    <TextView
        android:id="@+id/text_qnt"
        android:layout_below="@+id/view_name"
        android:layout_toStartOf="@+id/text_unt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantity"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
   />

    <TextView
        android:id="@+id/text_unt"
        android:layout_below="@+id/view_name"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unit"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="0dp"
        android:paddingEnd="16dp"/>

    <View
        android:id="@+id/view_portion"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_portion"
        android:background="@color/gray"/>

    <TextView
        android:id="@+id/text_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_portion"
        android:layout_alignParentStart="true"
        android:padding="16dp"
        android:text="@string/calories" />

    <TextView
        android:id="@+id/text_valueCalorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_portion"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        android:text="@string/value_calorie" />

    <View
        android:id="@+id/view_calorie"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_calories"
        android:background="@color/gray"/>

    <TextView
        android:id="@+id/text_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_calorie"
        android:layout_alignParentStart="true"
        android:padding="16dp"
        android:text="@string/information" />

    <TextView
        android:id="@+id/showDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_information"
        android:layout_alignParentStart="true"
        android:padding="16dp"
        android:text="@string/description" />

</RelativeLayout>